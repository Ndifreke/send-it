{
  "name": "sendIt",
  "version": "1.0.0",
  "repository": {},
  "license": "MIT",
  "author": "ndifreke",
  "contributors": [],
  "dependencies": {
    "ejs": "latest",
    "express": "^4.16.4",
    "jsonwebtoken": "^8.4.0",
    "pg": "latest",
    "serve-static": "latest",
    "webpack-cli": "^3.1.2"
  },
  "engines": {
    "node": "10.x"
  },
  "scripts": {
    "coverage": "nyc report --reporter=text-lcov | coveralls",
    "nodemon": "nodemon --exec babel-node app.js",
    "test:dev": "mocha --timeout 10000 --recursive ./test --exit --compilers js:babel-core/register",
    "sstart": "babel-node app.js",
    "lint": "eslint .",
    "clean": "cp temp/* -r build && rm -rf -d temp",
    "transpile": "babel ./ --out-dir ../build  --ignore node_modules",
    "copy-files":"cp node_modules index.html package.json .gitignore -r ../build",
    "build": "npm run transpile && npm run copy-files",
    "start": "node app.js",
    "test": "npm run build && mocha build/test/. --timeout 10000 --recursive --exit",
    "deploy":"npm run build && printf \"\n Deploying build wait ... \n\n\"&& ./deploy.sh" ,
    "pack": "webpack ui/javascript/UIBuilder.js ui/javascript/app.js"
  },
  "devDependencies": {
    "@babel/cli": "7.1.5",
    "@babel/core": "^7.0.0",
    "@babel/node": "7.0.0",
    "@babel/preset-env": "^7.2.0",
    "@babel/register": "^7.0.0",
    "babel-eslint": "^10.0.1",
    "body-parser": "latest",
    "chai": "^4.2.0",
    "chai-http": "^4.2.0",
    "eslint": "^5.9.0",
    "eslint-config-airbnb": "^17.1.0",
    "eslint-plugin-import": "^2.14.0",
    "eslint-plugin-jsx-a11y": "^6.1.2",
    "eslint-plugin-react": "^7.11.1",
    "mocha": "latest",
    "mocha-lcov-reporter": "^1.3.0",
    "webpack": "^4.27.1"
  }
}
